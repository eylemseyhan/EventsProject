@model EventsProject.Areas.Member.Models.DashboardViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberDashboardLayout.cshtml";
}

<h1 class="modern-heading">Profili Düzenle</h1>

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem; background-color: #ffffff;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="@Model.Image" alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                            <h5>@Model.Name @Model.Surname</h5>
                            <i class="far fa-edit mb-5"></i>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Bilgiler</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-12 mb-3">
                                        <h6>Ad ve Soyad</h6>
                                        <p class="text-muted">@Model.Name @Model.Surname</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@Model.Email</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FontAwesome Kütüphanesini Ekleme (İkonlar için) -->
<script src="https://kit.fontawesome.com/a076d05399.js"></script>

<style>
    .gradient-custom {
        /* Beyaz ve gri tonlarında gradient arka plan */
        background: linear-gradient(to right bottom, #f4f5f7, #d9d9d9); /* Gri ve beyaz tonları */
    }

    .card {
        background-color: #ffffff; /* Kartın beyaz arka planı */
        border-radius: .5rem;
    }

    .card-body {
        padding: 20px;
    }

    h6 {
        font-size: 18px;
        color: #333;
    }

    .text-muted {
        color: #6c757d;
    }

    .container {
        padding-top: 100px; /* Üstten boşluk ekledim */
    }

    /* İkonlar için stiller */
    .fab {
        font-size: 1.2rem;
        color: #333;
    }

        /* Hover efektleri */
        .fab:hover {
            color: #007bff;
        }

    .modern-heading {
        margin-top: 200px; /* Daha aşağıda konumlandır */
        font-family: 'Roboto', sans-serif; /* Modern bir font ailesi kullan */
        font-size: 36px; /* Yazı boyutunu büyüt */
        font-weight: 700; /* Kalınlık ayarı */
        color: #333; /* Yazı rengi */
        text-align: center; /* Ortala */
        letter-spacing: 1px; /* Harf aralığı */
    }
</style>

