@model EventsProject.Areas.Member.Models.DashboardViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberDashboardLayout.cshtml";
}

<h1 class="modern-heading">Profil Bilgileri</h1>

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-8 mb-4 mb-lg-0">
                <div class="card mb-3 shadow-lg" >
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             >
                            <img src="@Model.Image" alt="Avatar"  style="width: 120px;" />
                            <h5 class="mt-3">@Model.Name @Model.Surname</h5>
                            <form method="get" action="@Url.Action("Settings", "Dashboard", new { area = "Member" })">
                                <button class="btn btn-light btn-sm mt-4 shadow-sm" style="border-radius: 20px;">
                                    <i class="far fa-edit"></i> Düzenle
                                </button>
                            </form>

                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-5">
                                <h4 class="text-primary">Kullanıcı Bilgileri</h4>
                                <hr class="mt-0 mb-4">
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <h6>Ad ve Soyad</h6>
                                        <p class="text-muted">@Model.Name @Model.Surname</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@Model.Email</p>
                                    </div>
                                </div>
                                <hr>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://kit.fontawesome.com/a076d05399.js"></script>

<style>
    .gradient-custom {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .card {
        background-color: #ffffff;
        border-radius: 15px;
        overflow: hidden;
    }

    .card-body {
        background-color: #f9f9f9;
    }

    .modern-heading {
        margin-top: 200px;
        font-family: 'Poppins', sans-serif;
        font-size: 40px;
        font-weight: 600;
        color: #4e4e4e;
        text-align: center;
        letter-spacing: 1.5px;
 
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
        }

    .rounded-circle {
        border: 3px solid #ffffff;
    }

    .shadow-lg {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
</style>
