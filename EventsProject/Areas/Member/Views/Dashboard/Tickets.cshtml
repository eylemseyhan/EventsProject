@model List<EventsProject.Areas.Member.Models.TicketEventViewModel>
@{
    ViewData["Title"] = "Tickets";
    Layout = "~/Areas/Member/Views/Shared/_MemberDashboardLayout.cshtml";
}

<h1 class="modern-heading">Biletlerim</h1>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12">
                <div class="single-features-area mb-50" style="width:100%; height:100px; margin-top: 20px; display: flex; align-items: center; border: 1px solid #ddd; border-radius: 8px;">
                    <a href="@Url.Action("Details", "Dashboard", new {area = "Member", id = item.EventId })" style="text-decoration: none; color: inherit; display: flex; width: 100%; padding: 10px;">
                        <img src="@item.ImageUrl" style="width:120px; height:80px; object-fit: cover; margin-right: 20px;" alt="@item.EventName">
                        <div class="event-details" style="display: flex; flex-direction: column; justify-content: space-between; width: 100%; overflow: hidden;">
                            <div class="event-title">
                                <h5>@item.EventName</h5>
                                <p>@item.EventLocation</p>
                            </div>
                            <div class="event-meta">
                                <p><strong>@item.EventCategory</strong> | @item.EventArtist</p>
                                <p>@item.EventDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Biletleriniz henüz yok.</p>
}

<style>
    .modern-heading {
        margin-top: 200px; /* Daha aşağıda konumlandır */
        font-family: 'Roboto', sans-serif; /* Modern bir font ailesi kullan */
        font-size: 36px; /* Yazı boyutunu büyüt */
        font-weight: 700; /* Kalınlık ayarı */
        color: #333; /* Yazı rengi */
        text-align: center; /* Ortala */
        letter-spacing: 1px; /* Harf aralığı */
    }

    .single-features-area {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        display: flex;
        align-items: center;
        margin-top: 20px;
    }

    .event-details {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 100%;
        overflow: hidden;
        padding: 5px;
    }
    .event-meta {
        font-size: 15px;

    }

    .event-title h5 {
        font-size: 15px;
        font-weight: 600;
        color: #333;
        margin: 0;
    }

    .event-meta {
        font-size: 12px;
        color: #777;
    }

    .single-features-area a {
        display: flex;
        width: 100%;
        padding: 10px;
    }

    .single-features-area img {
        width: 120px;
        height: 80px;
        object-fit: cover;
        margin-right: 20px;
    }

    
    
</style>
