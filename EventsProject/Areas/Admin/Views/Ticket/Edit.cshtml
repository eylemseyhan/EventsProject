@model EntityLayer.Concrete.Ticket

@{
    ViewData["Title"] = "Bilet Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>Bilet Güncelle</h3>
        </div>
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="TicketId" value="@Model.TicketId" />

                <div class="form-group">
                    <label for="EventId">Etkinlik</label>
                    <select id="EventId" name="EventId" class="form-control" required>
                        <option value="">Etkinlik seçin</option>
                        @foreach (var eventItem in ViewBag.Events)
                        {
                            <option value="@eventItem.EventId" @(eventItem.EventId == Model.EventId ? "selected" : "")>
                                @eventItem.Title
                            </option>
                        }
                    </select>
                </div>



                <div class="form-group">
                    <label for="EventTicketCount">Etkinlik Bilet Sayısı</label>
                    <!-- Bilet sayısını düzenlenebilir hale getirelim -->
                    <input type="number" id="EventTicketCount" name="TicketCount" class="form-control" value="@Model.TicketCount" required />
                </div>


                <div class="form-group">
                    <label for="Price">Fiyat</label>
                    <input type="number" id="Price" name="Price" value="@Model.Price" class="form-control" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label for="IsAvailable">Durum</label>
                    <select id="IsAvailable" name="IsAvailable" class="form-control">
                        <option value="true" @(Model.IsAvailable ? "selected" : "")>Mevcut</option>
                        <option value="false" @(!Model.IsAvailable ? "selected" : "")>Satıldı</option>
                    </select>
                </div>


                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>