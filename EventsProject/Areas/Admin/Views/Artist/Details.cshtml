@model EntityLayer.Concrete.Artist

@{
    ViewData["Title"] = "Sanatçı Detayları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@Model.Name</h2>

<div class="card mt-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
                }
                else
                {
                    <p>Resim Bulunamadı</p>
                }
            </div>
            <div class="col-md-8">
                <h4>Biyografi</h4>
                <p>@Model.Bio</p>
            </div>
        </div>
    </div>
    <div class="card-footer text-end">
        <a href="@Url.Action("Index", "Artist", new { area = "Admin" })" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>
