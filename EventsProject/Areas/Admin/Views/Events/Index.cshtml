@using EntityLayer.Concrete
@model List<Event>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="card-title">Etkinlik Listesi</div>
                    <a href="@Url.Action("Create", "Events", new { area = "Admin" })" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Ekle
                    </a>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Kategori</th>
                                <th scope="col">Artist</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Etkinlik Tarihi</th>
                                <th scope="col">Konum</th>
                                <th scope="col">Resim</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.EventId" class="event-row">
                                    <td>@item.Category.Name</td>
                                    <td>@item.Artist.Name</td>
                                    <td>@item.Title</td>
                                    <td>@item.EventDate.ToString("dd MMM yyyy")</td>
                                    <td>@item.Location</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="Event Image" style="width: 100px; height: auto;" />
                                        }
                                        else
                                        {
                                            <p>Resim Yok</p>
                                        }
                                    </td>
                                    <td>
                                        <!-- Detay -->
                                       
                                        <!-- Güncelle -->
                                        <a href="@Url.Action("Edit", "Events", new { area = "Admin", id = item.EventId })" title="Güncelle" style="margin-right: 5px;">
                                            <i class="fas fa-edit" style="font-size: 1.2rem; color: #28a745;"></i>
                                             <form action="@Url.Action("Delete", "Events", new { area = "Admin" })" method="post" style="display:inline;" onsubmit="return confirm('Bu etkinliği silmek istediğinize emin misiniz?');">
                                                @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@item.EventId" />
        <button type="submit" style="background:none; border:none; padding:0; cursor:pointer;">
            <i class="fas fa-trash" style="font-size: 1.2rem; color: #dc3545;"></i>
        </button>

    </form>



                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
       const baseUrl = '@Url.Action("Details", "Events", new { area = "Admin" })' + '/';
    document.querySelectorAll('.event-row').forEach(row => {
        row.addEventListener('dblclick', function () {
            var eventId = this.getAttribute('data-id');
            window.location.href = baseUrl + eventId; 
        });
    });


</script>
