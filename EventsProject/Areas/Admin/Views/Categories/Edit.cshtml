@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="card-title">Kategori Güncelle</div>
                </div>
                <div class="card-body">
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.SuccessMessage
                        </div>
                    }
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="CategoryId" value="@Model.CategoryId" /> <!-- CategoryId mutlaka gönderilmeli -->

                        <div class="form-group">
                            <label for="Name">Kategori Adı</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
                        </div>

                        <div class="form-group">
                            <label for="IconUrl">Icon URL</label>
                            <input type="text" class="form-control" id="IconUrl" name="IconUrl" value="@Model.IconUrl" />
                        </div>

                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>