@using EntityLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<style>
    .container {
        display: flex;
        justify-content: flex-start; /* İçeriği yukarıya alır */
        align-items: flex-start; /* İçeriği yukarıya alır */
        min-height: auto; /* Sayfa yüksekliği kadar içerik ortalanmaz */
        padding: 20px 15px; /* Üstten 20px boşluk ekler */
    }

    .card {
        width: 100%;
        max-width: 1200px; /* Maksimum genişlik */
        margin: 20px 0; /* Üst ve alt boşluk */
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f8f9fa;
        padding: 10px 15px;
        border-bottom: 1px solid #dee2e6;
    }

    .btn-warning {
        display: flex;
        align-items: center;
        color: #fff;
        text-decoration: none;
        background-color: #ffc107;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    table {
        width: 100%;
        border-collapse: collapse;
    }

        table th, table td {
            text-align: left;
            padding: 10px;
            border: 1px solid #dee2e6;
        }

    .action-icons a {
        margin-right: 8px;
        text-decoration: none;
    }

    .action-icons i {
        font-size: 1.2rem;
    }
</style>


<div class="container">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="card-title">Kategori Listesi</div>
            <a href="@Url.Action("Create", "Categories", new { area = "Admin" })" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ekle
            </a>
        </div>
        <div class="card-body">
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> @ViewBag.SuccessMessage
                </div>
            }
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Kategori ID</th>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.Name</td>
                                <td>
                                    <!-- Güncelle -->
                                    <a href="@Url.Action("Edit", "Categories", new { area = "Admin", id = item.CategoryId })" title="Güncelle" style="margin-right: 5px;">
                                        <i class="fas fa-edit" style="font-size: 1.2rem; color: #28a745;"></i>
                                    </a>
                                    <!-- Sil -->
                                    <a href="@Url.Action("Delete", "Categories", new { area = "Admin", id = item.CategoryId })" title="Sil" onclick="return confirm('Bu sanatçıyı silmek istediğinize emin misiniz?');">
                                        <i class="fas fa-trash" style="font-size: 1.2rem; color: #dc3545;"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center">Hiç kategori bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>