@using EntityLayer.Concrete
@model Category

@{
    ViewData["Title"] = "Kategori Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="card-title">Kategori Sil</div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="alert alert-warning">
                            <strong>Uyarı!</strong> Bu kategoriyi silmek istediğinizden emin misiniz?
                        </div>
                        <div class="form-group">
                            <label for="Name">Kategori Adı</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name" disabled />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">Sil</button>
                            <a href="@Url.Action("Index", "Categories", new { area = "Admin" })" class="btn btn-secondary">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>