<style>

    .user-icon {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        width: 70px;
        height: 70px;
        background: transparent;
        border: none;
        outline: none;
        transition: transform 0.3s;
        cursor: pointer;
        padding: 0;
        margin: 0;
    }

        .user-icon:hover {
            transform: scale(1.2); /* Üzerine gelince büyüme efekti */
        }

        .user-icon i {
            font-size: 32px; /* Font Awesome ikon boyutu */
            color: white; /* İkonun beyaz olması */
        }

        .user-icon:focus {
            outline: none;
            box-shadow: none;
        }

        .user-icon:active {
            outline: none;
        }

    /* Dropdown Menüsü */
    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #f1f1f1;
            }

    /* Dropdown Menü gösterme */
    .dorne-add-listings-btn:hover .dropdown-content {
        display: block;
    }

    /* Header Area için sabit stil */
    .header_area {
        background: darkred !important;
        position: fixed !important;
        width: 100% !important;
        z-index: 9999 !important;
        top: 0 !important;
        left: 0 !important;
    }

        .header_area.sticky {
            background: darkred !important;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            position: fixed !important;
            width: 100% !important;
            z-index: 9999 !important;
            top: 0 !important;
            left: 0 !important;
        }

            /* Navbar elementleri için stiller */
            .header_area .navbar,
            .header_area.sticky .navbar,
            .header_area .navbar-collapse,
            .header_area.sticky .navbar-collapse {
                background: darkred !important;
            }

        /* Hamburger menü için stil */
        .header_area .navbar-toggler span {
            color: #fff !important;
        }

        /* Navbar linkler için stil */
        .header_area .nav-link,
        .header_area.sticky .nav-link,
        #dorneMenu .nav-link {
            color: #fff !important;
        }

    /* Dropdown menü pozisyonu düzeltme */
    .dorne-add-listings-btn {
        position: relative;
    }

    .dropdown-content {
        right: 0;
        top: 100%;
    }

    /* Tema'nın tüm sticky durumlarını override et */
    .header_area[class*="sticky"],
    .header_area[class*="fixed"],
    .header_area[class*="scrolled"],
    .header_area.is-sticky {
        background: darkred !important;
        position: fixed !important;
        width: 100% !important;
        z-index: 9999 !important;
        top: 0 !important;
        left: 0 !important;
    }
</style>





<script>
   

    // Sadece dropdown fonksiyonunu tutalım
    function toggleDropdown() {
        var dropdown = document.getElementById("dropdownMenu");
        dropdown.style.display = (dropdown.style.display === "block") ? "none" : "block";
    }

    // Sayfa dışına tıklandığında dropdown'ı kapatmak için
    document.addEventListener('click', function (event) {
        var dropdown = document.getElementById("dropdownMenu");
        var userIcon = document.querySelector('.user-icon');

        if (!userIcon.contains(event.target) && !dropdown.contains(event.target)) {
            dropdown.style.display = 'none';
        }
    });

</script>