    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-12 h-100">
                <nav class="h-100 navbar navbar-expand-lg">
                    <a class="navbar-brand" href="index.html"><img src="#" alt=""></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#dorneNav" aria-controls="dorneNav" aria-expanded="false" aria-label="Toggle navigation"><span class="fa fa-bars"></span></button>
                    <!-- Nav -->
                    <div class="collapse navbar-collapse" id="dorneNav">
                        <ul class="navbar-nav mr-auto" id="dorneMenu">
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index" aria-haspopup="true" aria-expanded="false">Ana Sayfa </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Concert/Index">Konser </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Theater/Index">Tiyatro</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Stand_Up/Index">Stand-Up</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/KidsEvent/Index">Çocuk Aktiviteleri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Festival/Index">Festival</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Contact/Index">İletişim</a>
                            </li>
                        </ul>
                        <!-- Search btn -->
                        <div class="dorne-search-btn">
                            <a id="search-btn" href="#"><i class="fa fa-search" aria-hidden="true"></i>Ara </a>
                        </div>
                        <div class="dorne-add-listings-btn">
                            <a href="javascript:void(0);" class="user-icon" onclick="toggleDropdown()">
                                <img src="~/dorne-master/img/core-img/signup.png" alt="User Icon" style="width: 24px; height: 24px;">
                            </a>
                            <ul>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <span>Hoş geldiniz, @User.Identity.Name</span>
                                    <a href="@Url.Action("Logout", "Login", new { area = "Member" })">Çıkış Yap</a>
                                }
                                else
                                {
                                    <span>Giriş yapmadınız.</span>
                                }
                            </ul>

                            <!-- Dropdown Menü -->
                            <div id="dropdownMenu" class="dropdown-content">
                                <a href="@Url.Action("SignUp", "Register", new { area = "Member" })">Kullanıcı Girişi</a>
                                <a href="@Url.Action("Index", "Login", new { area = "Admin" })">Admin Girişi</a>
                                <a href="@Url.Action("Index", "Dashboard", new { area = "Member" })">Kullanıcı Paneli</a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>

<style>

    .user-icon {
        display: inline-flex; /* Flexbox ile içeriği ortalamak için */
        justify-content: center; /* İçerikleri yatayda ortala */
        align-items: center; /* İçerikleri dikeyde ortala */
        width: 70px; /* Yuvarlak butonun yeni genişliği */
        height: 70px; /* Yuvarlak butonun yeni yüksekliği */
        background: transparent; /* Arka planı transparan yap */
        border: none; /* Kenarlıkları kaldır */
        outline: none; /* Outline'ı kaldır */
        transition: transform 0.3s; /* Hover efektinde ölçek geçişi için */
        cursor: pointer; /* Fare ile üzerine gelindiğinde el simgesi */
        padding: 0; /* İçerik etrafındaki boşluğu kaldır */
        margin: 0; /* Dışarıdaki boşluğu kaldır */
    }

    .user-icon:hover {
        transform: scale(1.2); /* Üzerine gelince büyüme efekti (ikonu %20 büyüt) */
    }

    .user-icon img {
        width: 80%; /* İkonun genişliği, butonun genişliğine göre ayarlanacak */
        height: 80%; /* İkonun yüksekliği, butonun yüksekliğine göre ayarlanacak */
        border-radius: 50%; /* İkonu yuvarlak yapmak için */
    }

    .user-icon:focus {
        outline: none; /* Outline'ı kaldır */
        box-shadow: none; /* Varsayılan gölgeyi kaldır */
    }

    .user-icon:active {
        outline: none; /* Aktif durumdaki outline'ı kaldır */
    }
    /* Dropdown Menüsü */
    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #f1f1f1;
            }

    /* Dropdown Menü gösterme */
    .dorne-add-listings-btn:hover .dropdown-content {
        display: block;
    }

</style>





<script>
    // Dropdown menüsünü açma ve kapama
    function toggleDropdown() {
        var dropdown = document.getElementById("dropdownMenu");
        dropdown.style.display = (dropdown.style.display === "block") ? "none" : "block";
    }

    // Sayfa dışında bir yere tıklanırsa dropdown menüsünü kapat
   
</script>