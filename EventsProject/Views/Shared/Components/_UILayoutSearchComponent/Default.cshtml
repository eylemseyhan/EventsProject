 <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" rel="stylesheet">

<section class="dorne-welcome-area bg-img bg-overlay">
    <!-- Video Arka Plan -->
    <video autoplay muted loop class="bg-video" style="width: 100%; height: 100%; object-fit: cover; position: absolute; top: 0; left: 0; z-index: -1;">
        <source src="~/dorne-master/videos/hero-video.mp4" type="video/mp4">
        Tarayıcınız bu videoyu desteklemiyor.
    </video>

    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center">
            <div class="col-12 col-md-10">
                <div class="hero-content">
                    <h2>Yakınınızdaki etkinlikleri keşfedin</h2>
                    <h4>Şehrinizdeki en popüler etkinlikleri kaçırmayın</h4>
                </div>
                <!-- Hero Search Form -->
                <div class="hero-search-form">
                    <!-- Tabs -->
                    <div class="nav nav-tabs" id="heroTab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-events-tab" data-toggle="tab" href="#nav-events" role="tab" aria-controls="nav-events" aria-selected="true">Etkinlikler</a>
                       
                    </div>
                    <!-- Tabs Content -->
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-events" role="tabpanel" aria-labelledby="nav-events-tab">
                            <h6>Hangi etkinlikleri arıyorsunuz?</h6>
                            <form action="/EventSearch/Index" method="get">
                                <select class="custom-select" name="cityId">
                                    <option selected value="">Etkinlik Şehri</option>
                                    @foreach (var city in (IEnumerable<DataAccessLayer.City>)ViewBag.Cities)
                                    {
                                        <option value="@city.CityId">@city.CityName</option>
                                    }
                                </select>
                                <select class="custom-select" name="categoryId">
                                    <option selected value="">Tüm Kategoriler</option>
                                    @foreach (var category in (IEnumerable<EntityLayer.Concrete.Category>)ViewBag.Categories)
                                    {
                                        <option value="@category.CategoryId">@category.Name</option>
                                    }
                                </select>
                                <button type="submit" class="btn dorne-btn">
                                    <i class="fa fa-search pr-2" aria-hidden="true"></i> Ara
                                </button>
                            </form>

                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Social Btn -->
    <div class="hero-social-btn">
        <div class="social-title d-flex align-items-center">
            <h6 style="font-size: 14px;">Bizi Sosyal Medyada Takip Edin</h6>
            <span></span>
        </div>
        <div class="social-btns">
            <a href="#"><i class="fa fa-instagram" aria-haspopup="true"></i></a>
            <a href="#"><i class="fa fa-twitter" aria-haspopup="true"></i></a>
            <a href="#"><i class="fa fa-facebook" aria-haspopup="true"></i></a>
        </div>
    </div>
</section>

<style>
    /* Hero Content Styles */
.hero-content h2 {
    font-size: 4.5rem !important;
    font-weight: 700 !important;
    color: #fff !important;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3) !important;
    margin-bottom: 20px !important;
    animation: fadeInDown 1s ease-out !important;
    font-family: 'Poppins', sans-serif !important;
    letter-spacing: 2px !important;
}

.hero-content h4 {
    font-size: 2rem !important;
    color: #fff !important;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2) !important;
    margin-bottom: 30px !important;
    animation: fadeInUp 1s ease-out !important;
    font-family: 'Poppins', sans-serif !important;
    letter-spacing: 1px !important;
    font-weight: 300 !important;
}


</style>