<script>
    function toggleFavorite(element) {
        // Kalp ikonu elemanını seç
        const icon = element.querySelector('i');

        // Etkinlik ID'sini alın
        const eventId = element.getAttribute('data-event-id');

        // Favori ekleme/silme işlemini gerçekleştirin
        if (icon.classList.contains('fa-heart-o')) {
            // Favori olarak işaretle
            icon.classList.remove('fa-heart-o');
            icon.classList.add('fa-heart');

            // Burada favori ekleme işlemini API'ye gönderin
            console.log(Etkinlik ${eventId} favorilere eklendi.);
        } else {
            // Favoriden çıkar
            icon.classList.remove('fa-heart');
            icon.classList.add('fa-heart-o');

            // Burada favoriden çıkarma işlemini API'ye gönderin
            console.log(Etkinlik ${eventId} favorilerden çıkarıldı.);
        }
    }
</script>

